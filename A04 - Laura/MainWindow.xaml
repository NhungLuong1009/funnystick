<Window x:Class="A04_Threads_and_Tasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A04_Threads_and_Tasks"
        mc:Ignorable="d"
        Name="myWindow"
        Closing="Window_Closing"  
        Title="MainWindow" Height="600" Width="800">
    <DockPanel>
        <StatusBar DockPanel.Dock="Top" >
            <Button x:Name="BtnStart" Content="Start" Click="BtnStart_LineDraw" />
            <Button x:Name="BtnStop" Content="Stop" Click="BtnStop_JoinThreads" />
            <Button x:Name="BtnPause" Content="Pause" Click="BtnPause_PauseLines" />
            <Button x:Name="BtnResume" Content="Resume" Click="BtnResume_ResumeLines" />
            <Slider Height="22" Width="271" ValueChanged="Slider_ValueChanged"/>
        </StatusBar>
        <Canvas x:Name="FunCanvas">
            
        </Canvas>
        
    </DockPanel>
        
    
</Window>
